@model School.WebApp.Models.PersonViewModel

@{
    ViewData["Title"] = "Info";
}

<h1>Teacher Info</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            Date Of Birth
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth.Date)
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>

<h4>Courses</h4>

<hr />
@foreach (var course in Model.AssignedCourses)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => course.Value)
        </td>
    </tr>
    <hr />
}
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id"> Edit </a>|
    <a asp-action="Delete" asp-route-id="@Model.Id"> Delete </a>
</div>
