@model List<School.WebApp.Models.PersonViewModel>

@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary" asp-action="Add">Add Teacher</a>
<br />
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Teacher
            </th>
            <th>
                Date Of Birth
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var teacher in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => teacher.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => teacher.DateOfBirth)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@teacher.Id"> Edit </a> |
                <a asp-action="Info" asp-route-id="@teacher.Id"> Info </a> |
                <a asp-action="Delete" asp-route-id="@teacher.Id"> Delete </a>
            </td>
        </tr>
    }
</table>