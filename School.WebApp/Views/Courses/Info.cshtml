@model School.WebApp.Models.CourseViewModel

@{
    ViewData["Title"] = "Info";
}

<h1>Course Info</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsActivated)
            {
                <span>Activated</span>
            }
            else
            {
                <span>Disabled</span>
            }
        <dt class="col-sm-2">
            Teacher
        </dt>
        <dd class="col-sm-10">
            @if (Model.TeachersFullName != null)
            {
            <a asp-controller="Teachers" asp-action="Info" asp-route-id="@Model.TeachersId">
                @Html.DisplayFor(model => model.TeachersFullName)
            </a>
            }
            else
            {
                <span>Not Assigned</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id"> Edit </a>|
    <a asp-action="Delete" asp-route-id="@Model.Id"> Delete </a>|
    <a asp-action="Index"> Back To List </a>
</div>
