@model School.WebApp.Models.CourseViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            <span>Status</span>
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsActivated)
            {
                <span>Activated</span>
            }
            else
            {
                <span>Disabled</span>
            }
        <dt class="col-sm-2">
            <span>Teacher</span>
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsActivated)
            {
                @Html.DisplayFor(model => model.TeachersFullName)
            }
            else
            {
                <span>Not Assigned</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
